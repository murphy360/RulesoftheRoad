<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andrios.rulesoftheroad.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/questionText1"
                        style="@style/QuestionTextStyle"
                        android:text="@string/question_1"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:orientation="horizontal">


                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_1_1"
                        android:id="@+id/checkBox1"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/chaff_1_1"
                        android:id="@+id/checkBox2"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_1_2"
                        android:id="@+id/checkBox3"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/chaff_1_2"
                        android:id="@+id/checkBox4"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/default_text1"
                        style="@style/QuestionTextStyle"
                        android:text="@string/question_2"/>
                </LinearLayout>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_2"
                        android:id="@+id/checkBox5"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chaff_2_1"
                        android:id="@+id/checkBox6" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chaff_2_2"
                        android:id="@+id/checkBox7"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chaff_2_3"
                        android:id="@+id/checkBox8"/>

                </RadioGroup>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/default_text"
                        style="@style/QuestionTextStyle"/>
                </LinearLayout>



            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/default_text"
                        style="@style/QuestionTextStyle"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:orientation="horizontal">


                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox13"
                        android:layout_weight="1"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox14"
                        android:layout_weight="1"
                        android:checked="false" />
                </LinearLayout>
                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox15"
                        android:layout_weight="1"
                        android:checked="false" />
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox16"
                        android:layout_weight="1"
                        android:checked="false" />
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/default_text"
                        style="@style/QuestionTextStyle"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:orientation="horizontal">


                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox17"
                        android:layout_weight="1"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox18"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    style="@style/QuetionLinearLayout"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox19"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox20"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
